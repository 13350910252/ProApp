<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0f0f0"
    android:orientation="vertical"
    tools:context=".module.customview.activity.CustomViewActivity">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp"
        android:text="复制加更改的"
        android:textColor="@color/ff4d4d"
        android:textSize="@dimen/textSize_18sp"
        android:textStyle="bold" />

    <com.yinp.tools.shap_view.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_14dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_14dp"
        android:orientation="vertical"
        app:oneBg="@color/white"
        app:radius="10"
        app:state="pressed">

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:text="点击屏幕显示点击范围的图片，可以滑动，显示范围随着滑动改变"
            android:textColor="@color/_333"
            android:textSize="@dimen/textSize_16sp"
            android:textStyle="bold" />
    </com.yinp.tools.shap_view.ShapeLinearLayout>
</LinearLayout>